<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
	"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
	<servlet>
		<servlet-name>Context</servlet-name>
		<servlet-class>us.mn.state.dot.video.server.PropertiesContext</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>StreamServer</servlet-name>
		<servlet-class>us.mn.state.dot.video.server.StreamServer</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>StreamServer</servlet-name>
		<url-pattern>/stream</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ImageServer</servlet-name>
		<servlet-class>us.mn.state.dot.video.server.ImageServer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImageServer</servlet-name>
		<url-pattern>/imageserver</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ArchiveManager</servlet-name>
		<servlet-class>us.mn.state.dot.video.server.ArchiveServer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ArchiveManager</servlet-name>
		<url-pattern>/clip</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ArchiveManager</servlet-name>
		<url-pattern>/range</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>NvrConfig</servlet-name>
		<servlet-class>us.mn.state.dot.video.server.NvrConfigServer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NvrConfig</servlet-name>
		<url-pattern>/nvrconfig</url-pattern>
	</servlet-mapping>
</web-app>
